<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <TraitDef>
    <defName>Asexual</defName>
    <commonality>0.001</commonality>
    <degreeDatas>
      <li>
        <label>asexual</label>
        <description>{PAWN_nameDef} is uninterested in romantic entanglements.</description>
      </li>
    </degreeDatas>
    <conflictingTraits>
      <li>Bisexual</li>
      <li>Gay</li>
      <li>Straight</li>
      <li>Polyamorous</li>
    </conflictingTraits>
  </TraitDef>
  <TraitDef>
    <defName>Bisexual</defName>
    <commonality>0.001</commonality>
    <degreeDatas>
      <li>
        <label>bisexual</label>
        <description>{PAWN_nameDef} is romantically attracted to people regardless of gender.</description>
      </li>
    </degreeDatas>
    <conflictingTraits>
      <li>Asexual</li>
      <li>Gay</li>
      <li>Straight</li>
    </conflictingTraits>
  </TraitDef>
  <TraitDef>
    <defName>Gay</defName>
    <commonality>0.001</commonality>
    <degreeDatas>
      <li>
        <label>gay</label>
        <description>{PAWN_nameDef} is romantically attracted to people of {PAWN_possessive} own gender.</description>
      </li>
    </degreeDatas>
    <conflictingTraits>
      <li>Asexual</li>
      <li>Bisexual</li>
      <li>Straight</li>
    </conflictingTraits>
  </TraitDef>
  <TraitDef>
    <defName>Straight</defName>
    <commonality>0.001</commonality>
    <degreeDatas>
      <li>
        <label>straight</label>
        <description>{PAWN_nameDef} is romantically attracted to people of the opposite gender.</description>
      </li>
    </degreeDatas>
    <conflictingTraits>
      <li>Asexual</li>
      <li>Bisexual</li>
      <li>Gay</li>
    </conflictingTraits>
  </TraitDef>
  <TraitDef>
    <defName>Faithful</defName>
    <commonality>0.05</commonality>
    <degreeDatas>
      <li>
        <label>faithful</label>
        <description>{PAWN_nameDef} will never cheat on a partner, no matter how bad the relationship gets.</description>
      </li>
    </degreeDatas>
    <conflictingTraits>
      <li>Philanderer</li>
    </conflictingTraits>
  </TraitDef>
  <TraitDef>
    <defName>Philanderer</defName>
    <commonality>0.05</commonality>
    <degreeDatas>
      <li>
        <label>philanderer</label>
        <description>{PAWN_nameDef} just cannot be trusted to stay faithful to a partner.</description>
      </li>
    </degreeDatas>
    <conflictingTraits>
      <li>Faithful</li>
    </conflictingTraits>
  </TraitDef>
  <TraitDef>
    <defName>Polyamorous</defName>
    <commonality>0.001</commonality>
    <degreeDatas>
      <li>
        <label>polyamorous</label>
        <description>{PAWN_nameDef} prefers romantic relationships involving multiple partners to monogamous relationships. {PAWN_pronoun} doesn't mind if {PAWN_possessive} partners romance other people, but will be less happy in a restraining, monogamous relationship.</description>
      </li>
    </degreeDatas>
    <conflictingTraits>
      <li>Asexual</li>
    </conflictingTraits>
  </TraitDef>
</Defs>
